        <script><![CDATA[function handler({ api, event }) {
  // ดึงค่า key/value จาก event (ชื่อ path อาจต่างตาม event ของ component)
  const key = event.elementId;
  const value = event.payload.value;
console.log("key ",key);
console.log("value ",value);


  if (!key) return;

  const current = api.state.request || {};
  api.setState('request', { ...current, [key]: value });

  console.log('STATE request =', api.state.request);

}
